// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./db.sqlite"
}

model Post {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  category  String
  anonymous Boolean
  name      String?
  content   String

  likes    Int       @default(0)
  comments Comment[]
}

model LovePost {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  anonymous  Boolean
  fromName   String?
  fromGender String
  toName     String
  toGender   String
  content    String

  likes    Int       @default(0)
  comments Comment[]
}

model Comment {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())

  likes Int @default(0)

  name      String
  anonymous Boolean
  content   String

  post   Post?   @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId String?

  lovePost   LovePost? @relation(fields: [lovePostId], references: [id], onDelete: Cascade)
  lovePostId String?
}

model Config {
  id     Int    @id @default(1)
  school String @default("")
}
