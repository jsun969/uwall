// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./db.sqlite"
}

model Post {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())

  category  String
  anonymous Boolean
  content   String

  name     String?
  gender   String?
  toName   String?
  toGender String?

  likes    Int       @default(0)
  comments Comment[]
}

model Comment {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())

  likes Int @default(0)

  name      String
  anonymous Boolean
  content   String

  post   Post @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId Int
}

model Config {
  id     Int    @id @default(1)
  school String @default("")
}

model FooterLink {
  id   Int    @id @default(autoincrement())
  name String
  link String
}
